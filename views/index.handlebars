<h1><img src= "./img/burger.png"></h1>
<h1>Eat-Da-Burger!</h1>

<ul>

	{{#each burger}}
		<li>
			<p>
				{{this.id}}. {{this.burger_name}}
				<form action ="update/{{this.id}}?_method=PUT" method="PUT">
					<input type ="hidden" name ="devoured" value=false>
					<button type = "submit" id={{this.id}} class="devour">Devour it!</button>
				</form>
			</p>
		</li>
	{{/each}}
</ul>
<form class = "create-update-form" action="/create" method = "POST">
	<div class="form-group">
		<label for="burger">
		<input type = "text" id = "burg" name = "name">
	</div>
	<button type = "submit" id="addBurger">Add Burger</button>
</form>